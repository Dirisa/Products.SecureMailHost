<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="plonehelpcenter">


  <head>
    <metal:css fill-slot="css_slot">
    <style type="text/css" media="all"
           tal:content="string: @import url($portal_url/helpcenter.css);"></style>
    </metal:css>

    <metal:override fill-slot="column_two_slot" />
    </head>

<body>
  <div metal:fill-slot="main"
          tal:define="tocInfo         python:here.getTOC (here);
                      toc             tocInfo/toc;
		              tocIdx          tocInfo/currentIndex;
		              nextIdx         tocInfo/nextIndex;
		              prevIdx         tocInfo/previousIndex;
		              parentIdx       tocInfo/parentIndex;
		              sectionNumber   python:toc[tocIdx]['number'];
		              sections        python:[c for c in toc if c['parentIndex'] == tocIdx]">

    <h1 class="documentFirstHeading">
        <img tal:replace="structure here/referencemanual_icon.gif" />
        <span tal:replace="sectionNumber">1.2.</span>
        <span tal:replace="here/Title">Title</span>
    </h1>
        
    <a href=""
           class="link-parent"
           tal:define="parent_url python:here.navigationParent(here, template.getId())"
           tal:condition="parent_url"
           tal:attributes="href parent_url"
           i18n:translate="go_to_parent_url">
        Up one level
        </a>

    <div metal:use-macro="here/document_actions/macros/document_actions">
      Document actions (print, sendto etc)
    </div>

     
    <div class="listingBar" 
        tal:condition="python: nextIdx >= 0 or prevIdx >= 0">
        
        <tal:next condition="python:nextIdx >= 0">
            <a class="listingNext"
               tal:define="next python:toc[nextIdx]" 
               tal:attributes="href next/url"
               tabindex="1"
               href="">
                <span i18n:translate="phc_next">
                   Next:
                </span>
                <span tal:replace="next/title" /> 
               <img tal:replace="structure here/arrowRight.gif" />
           </a>   
        </tal:next>
	       
        <tal:prev condition="python:prevIdx >= 0">
            <a class="listingPrevious"
               tal:define="prev python:toc[prevIdx]" 
               tal:attributes="href prev/url"
               tabindex="1"
               href="">
                <img tal:replace="structure here/arrowLeft.gif" />
                <span i18n:translate="phc_previous">
                   Previous:
                </span>
                <span tal:replace="prev/title" /> 
           </a>   
        </tal:prev>	       
		
        &nbsp;
    </div>

    <form method="get" action="redirect_to" style="text-align:right;">
        <label for="dest">Jump to: </label>
        <select name="dest" tabindex="3">
            <option tal:repeat="item toc"
                    tal:attributes="value item/url;
                                    selected python:test (item['selected'], 'selected', None)">
                <span tal:replace="item/number"/>
                <span tal:replace="item/title"/>
            </option>
        </select>
        <input class="standalone"
               type="submit"
               value="Go"
               i18n:attributes="value"
               tabindex="4" />
    </form>

    <div class="documentDescription"
      tal:condition="here/Description"
      tal:content="structure here/Description">
      Description
    </div>


    <dl condition="nocall:sections">
        <tal:block repeat="section sections">
            <dt>
                <span tal:replace="section/number"/>
                <a tal:attributes="href section/url" 
                    tal:content="section/title">Title</a>
            </dt>
            <dd tal:content="section/description"/>
        </tal:block>
    </dl>
    
    <p tal:condition="not:nocall:sections" class="discreet">
      There are no pages or sections in this Reference Manual. Use the 'add new item' menu to add Sections, Pages, Files, or Images.
    </p>

    <div metal:use-macro="here/document_byline/macros/byline">
      Get the byline - contains details about author and modification date.
    </div>
  </div>
</body>
</html>
