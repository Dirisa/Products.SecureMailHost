<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="plonehelpcenter">


  <head>
    <metal:css fill-slot="css_slot">
    <style type="text/css" media="all"
           tal:content="string: @import url($portal_url/helpcenter.css);"></style>
    </metal:css>

    <metal:override fill-slot="column_two_slot" />
    </head>

<body>
  <div metal:fill-slot="main"
          tal:define="sibl here/getParentSectionsAndPages;
		             num_sibl python:len(sibl);
		             pos python:here.getParentItemPosition(here);">

    <h1 class="documentFirstHeading">
        <img tal:replace="structure here/referencemanual_icon.gif" />
        <span tal:replace="here/Title">Title</span>
    </h1>
    
    <a href=""
           class="link-parent"
           tal:define="parent_url python:here.navigationParent(here, template.getId())"
           tal:condition="parent_url"
           tal:attributes="href parent_url"
           i18n:translate="go_to_parent_url">
        Up one level
        </a>

    <div metal:use-macro="here/document_actions/macros/document_actions">
      Document actions (print, sendto etc)
    </div>

    <div class="documentDescription"
      tal:condition="here/Description"
      tal:content="structure here/Description">
      Description
    </div>

    <tal:block define="sections here/getSectionsAndPages">
        <ol tal:condition="nocall:sections">
          <li tal:repeat="section sections">
          <a tal:attributes="href section/absolute_url" 
                tal:content="section/Title">Title</a>
          <span tal:replace="section/Description">Descrip</span>
          </li>
        </ol>
        
        <p tal:condition="not:nocall:sections" class="discreet">
          There are no pages or sections in this Reference Manual. Use the 'add new item' menu to add Sections, Pages, Files, or Images.
        </p>
    </tal:block>
      
    <div class="listingBar" tal:condition="python: next or prev"
	      tal:define="next python:pos &lt; num_sibl-1 and sibl[pos+1];
               prev python:pos != 0 and sibl[pos-1]"
               >
            <a class="listingNext"
               tal:condition="python:next"
               tal:attributes="href next/absolute_url"
               tabindex="1"
               href="">
	       <span i18n:translate="phc_next">
               Next: </span>
	       <span tal:replace="next/title_or_id" /> 
	       <img tal:replace="structure here/arrowRight.gif" />
	       </a>
            <a class="listingPrevious"
               tal:condition="python:prev"
               tal:attributes="href prev/absolute_url"
               tabindex="1"
               href="">
               <img tal:replace="structure here/arrowLeft.gif" />
	       <span i18n:translate="phc_previous">
	        Previous: </span>
		<span tal:replace="prev/title_or_id" />
		</a>
               &nbsp;
        </div>

        <form method="get" action="redirect_to" style="text-align:right;">
            <label for="dest">Page index</label>
            <select name="dest"
                    tabindex="3">
                <option value=".">Page Index</option>
                <option tal:repeat="s sibl"
                        tal:attributes="value s/getId;">
                    Part <tal:index replace="repeat/s/number" />:
                    <tal:page content="s/title_or_id">Some Page</tal:page>
                </option>
            </select>
            <input class="standalone"
                   type="submit"
                   value="Go"
                   i18n:attributes="value"
                   tabindex="4" />
        </form>

    <div metal:use-macro="here/document_byline/macros/byline">
      Get the byline - contains details about author and modification date.
    </div>
  </div>
</body>
</html>
