<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="plonehelpcenter">


  <head>
    <metal:css fill-slot="css_slot">
    <style type="text/css" media="all"
           tal:content="string: @import url($portal_url/helpcenter.css);"></style>
    </metal:css>

    <metal:override fill-slot="column_two_slot" />
    </head>

<body>
  <div metal:fill-slot="main">

    <h1 class="documentFirstHeading">
        <img tal:replace="structure here/referencemanual_icon.gif" />
        <span tal:replace="here/Title">Title</span>
    </h1>

    <div metal:use-macro="here/document_actions/macros/document_actions">
      Document actions (print, sendto etc)
    </div>

    <div class="documentDescription"
      tal:condition="here/Description"
      tal:content="structure here/Description">
      Description
    </div>

    <tal:block define="toc here/getTOC" condition="nocall:toc">
        <tal:block repeat="item toc/toc">
          <div tal:attributes="class string:toc-depth-${item/depth}">
              <span class="item-numbering" tal:content="item/number"/>
              <a tal:attributes="href item/url" tal:content="item/title"/>
              <blockquote tal:content="item/description">
                Description
              </blockquote>
          </div>
        </tal:block>
        
        <p tal:condition="not:nocall:toc" class="discreet">
          There are no pages or sections in this Reference Manual. Use the 'add new item' menu to add Sections, Pages, Files, or Images.
        </p>
        <p tal:condition="nocall:toc">
          <img tal:replace="structure here/referencemanual_icon.gif" />
          <a href="referencemanual-all-pages">
          All content on one page (useful for printing, presentation mode etc.)
          </a>
        </p>
    </tal:block>
      
    <p tal:condition="here/getVersionsVocab" tal:define="versions here/Versions" class="discreet">
	<span i18n:translate="phc_referencemanual_applies_to">This Reference Manual applies to:</span>         
    <span tal:condition="versions" tal:replace="versions">1.0, 2.0</span>
    <span tal:condition="not: versions">
	  <span i18n:translate="phc_any_version">
	  Any version.
	  </span>
    </span>
    </p>
        
    <div metal:use-macro="here/helpcenter_references/macros/view_referenced_items">
      see also - shows the references if this feature is switched on
    </div>
    <div metal:use-macro="here/document_byline/macros/byline">
      Get the byline - contains details about author and modification date.
    </div>
  </div>
</body>
</html>
