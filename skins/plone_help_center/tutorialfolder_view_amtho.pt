<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="plonehelpcenter">

  <head>
    <metal:css fill-slot="css_slot">
      <style type="text/css" media="all"
        tal:content="string: @import url($portal_url/helpcenter.css);"></style>
    </metal:css>
  </head>

  <body>
    <div metal:fill-slot="main"
         tal:define="pss python:modules['Products.PythonScripts.standard']; 
			sectionslist here/getSectionsToList">

      <h1 tal:content="here/Title" class="documentFirstHeading">
        Folder Title
      </h1>

      <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
      </div>

      <div class="documentDescription"
        tal:content="here/Description">
        Description.
      </div>


		<tal:sectionlinks condition="python:len(sectionslist) > 1">
			<ul tal:repeat="section sectionslist">
				<li><a tal:attributes="href python:current_page_url + '#' + pss.url_quote(section)"
						tal:content="section">[section]</a></li>
			</ul>
		</tal:sectionlinks>


    <div tal:repeat="section sectionslist">

        <a name="section" tal:attributes="name python:pss.url_quote(section)"> </a>

        <h2 tal:content="section">Section Heading</h2>

        <dl>

            <tal:tutorial repeat="tutorial python:here.getItemsBySection(section=section)">
            
            <dt>
                <img tal:replace="structure here/tutorial_icon.gif" />
                <a href="" 
                   tal:content="tutorial/Title"
                   tal:attributes="href tutorial/absolute_url">Tutorial</a>
            </dt>
            
            <dd tal:content="tutorial/Description">Description</dd>

            </tal:tutorial>
          
        </dl>
    </div>

    <div metal:use-macro="here/document_byline/macros/byline">
      Get the byline - contains details about author and modification date.
    </div>
    </div>
  </body>

</html>
