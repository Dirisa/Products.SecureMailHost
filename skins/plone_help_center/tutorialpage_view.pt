<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master">
<body>

<div metal:fill-slot="main">

    <div metal:define-macro="main"
         tal:define="len_text python:len(here.getBody());
                     silb python:here.contentValues('HelpCenterTutorialPage');
                     pos python:here.getObjectPosition(here.getId())">
      
        <h1 class="documentFirstHeading">
            <img tal:replace="structure here/howto_icon.gif" />
            <span tal:replace="here/title_or_id">Title or id</span>
        </h1>
    
        <div metal:use-macro="here/document_actions/macros/document_actions">
            Document actions (print, sendto etc)
        </div>

        <div>
            <a tal:define="prev python:pos != 0 and silb[pos-1]"
               tal:condition="python:prev"
               tal:attributes="href prev/absolute_url"
               tal:content="prev/title_or_id"
               href="">
                Previous Item
	    </a>
            <a tal:define="next python:pos &lt; len(silb)-1 and silb[pos+1]"
               tal:condition="python:next"
               tal:attributes="href next/absolute_url"
               tal:content="next/title_or_id"
               href="">
                Next Item
	    </a>
	</div>
    
        <div class="documentDescription"
             tal:content="here/Description">
            description
        </div>
  
        <p tal:condition="not: len_text"
           i18n:translate="no_body_text">
            This item does not have any body text, click the edit tab to change it.
        </p>
    
        <div id="bodyContent">
            <div tal:replace="structure python:here.getBody()" />
        </div>
    
        <div metal:use-macro="here/document_byline/macros/byline">
          Get the byline - contains details about author and modification date.
        </div>    

    </div>

</div>

</body>
</html>
