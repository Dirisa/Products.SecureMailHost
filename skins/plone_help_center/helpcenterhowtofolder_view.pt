<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  lang="en"
  metal:use-macro="here/main_templates/macros/master"
  i18n:domain="plonehelpcenter">

  <head>
    <metal:css fill-slot="css_slot">
      <style type="text/css" media="all"
        tal:content="string: @import url($portal_url/helpcenter.css);"></style>
    </metal:css>
  </head>

  <body>
    <div metal:fill-slot="main">

      <h1 tal:content="here/Title" class="documentFirstHeading">
        Folder Title
      </h1>

      <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
      </div>

      <div class="documentDescription"
        tal:content="here/Description">
        Description.
      </div>

      <div tal:repeat="section here/getSections">

        <h2 tal:content="section">Section Heading</h2>

        <ul>

          <li tal:repeat="howto python:here.getHowToItemsBySection(section=section)">
          <a href="" tal:content="howto/Title"
            tal:attributes="href howto/absolute_url">HowTo</a>
          </li>
          
        </ul>
      </div>

    </div>
  </body>

</html>
