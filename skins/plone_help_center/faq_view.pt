<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    metal:use-macro="here/main_template/macros/master"
    i18n:domain="plonehelpcenter">
 
<body>
    <div metal:fill-slot="main">
        <div metal:define-macro="faq" 
             tal:define="w python:here.widget;">

            <h2 tal:content="here/Title">Question</h2>
            
            <div class="documentDescription"
                 tal:content="structure here/getQuestion|nothing">
            Full Question
            </div>
               
            <div tal:content="structure here/getAnswer">
            Answer
            </div>
    
            <p tal:condition="here/getVersions" 
               class="discreet">
                This FAQ applies to: 
                <span tal:condition="here/versions"
                      metal:use-macro="python:here.widget('versions')">
                Versions
                </span>

                <span tal:condition="not: here/versions">
                Any version.
                </span>
            </p>
    
        </div>
    </div>
</body>
</html>
