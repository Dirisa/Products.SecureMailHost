<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="plonehelpcenter">

  <head>
    <metal:css fill-slot="css_slot">
      <style type="text/css" media="all"
        tal:content="string: @import url($portal_url/helpcenter.css);"></style>
    </metal:css>
  </head>

  <body>
    <div metal:fill-slot="main">

      <h1 tal:content="here/Title" class="documentFirstHeading">
        Folder Title
      </h1>

      <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
      </div>

      <div class="documentDescription"
        tal:content="here/Description">
        Description.
      </div>

    <div tal:repeat="section here/getSectionsToList">

        <h2 tal:content="section">Section Heading</h2>

        <dl>

            <tal:referencemanual repeat="referencemanual python:here.getItemsBySection(
                                           section=section, 
                                           states = test(
                                             user.has_role(['Owner', 'Reviewer', 'Manager'], context), 
                                             ['published', 'pending'], 
                                             ['published']
                                           )
                                         )">
            
            <dt>
                <img tal:replace="structure here/referencemanual_icon.gif" />
                <a href="" 
                   tal:content="referencemanual/Title"
                   tal:attributes="href referencemanual/absolute_url">Reference Manual</a>
            </dt>
            
            <dd tal:content="referencemanual/Description">Description</dd>

            </tal:referencemanual>
          
        </dl>
    </div>

    <div metal:use-macro="here/document_byline/macros/byline">
      Get the byline - contains details about author and modification date.
    </div>
    </div>
  </body>

</html>
