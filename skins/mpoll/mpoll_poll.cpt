<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="mpoll">
<body>

<!-- The Mpolls list -->
<div metal:fill-slot="main">
	<h1 i18n:translate="box_poll"> list all mpolls</h1>

                <div class="description"  >
	            <p tal:content="here/getQuestion"></p>
                </div>

                <div tal:define="obj here">
                    <form method="post"
                          tal:attributes="action string:${here/absolute_url}/${template/id}">
                          <div style="padding-bottom: 10px;" tal:repeat="item here/getAnswers">
                              <input tal:attributes="value repeat/item/number;
                                                     checked python:test(repeat['item'].start, 'checked', '')"
                                     type="radio"
                                     name="answer"
                                     class="noborder" />&nbsp;<span tal:content="item"></span>
                          </div>

                          <input type="submit"
                                 class="context"
                                 i18n:attributes="value"
                                 value="Vote" />

                          <input type="hidden" name="form.submitted" value="1"/>
                    </form>

                    <div ><a tal:attributes="href here/absolute_url" i18n:translate="label_view_results">View results</a> | <a href="mpoll_list" i18n:translate="all_mpolls">All polls</a></div>

                </div>
</div>
</body>

</html>
