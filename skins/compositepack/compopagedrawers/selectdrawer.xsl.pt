XSL transformation from Kupu Library XML to HTML for the link library
drawer.

$Id: selectdrawer.xsl.pt,v 1.1 2004/05/07 09:30:46 godchap Exp $
-->
<xsl:stylesheet
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  version="1.0">

  <xsl:import
    href="librarydrawer.xsl"
    tal:attributes="href here/kupudrawers/librarydrawer.xsl/absolute_url"
    />

  <xsl:template match="resource|collection" mode="properties">
     <table>
       <tr>
         <td>
           <strong>Title</strong><br />
           <xsl:value-of select="title" />
         </td>
       </tr>
       <tr>
         <td>
           <strong>Description</strong><br />
           <xsl:value-of select="description" />
         </td>
       </tr>
     </table>
  </xsl:template>
</xsl:stylesheet>
