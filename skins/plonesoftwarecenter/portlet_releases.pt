<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plonesoftwarecenter">

<body>

<!-- Release portlet -->

<div metal:define-macro="portlet"
     tal:define="results python:context.portal_catalog(
                                        portal_type='PSCRelease',
                                        sort_on='Date',
                                        sort_order='reverse',
                                        sort_limit=5,
                                        review_state='published')[:5];
                 psc     python:context.portal_catalog(
                                        portal_type='PloneSoftwareCenter',
                                        sort_on='Date',
                                        sort_order='reverse',
                                        sort_limit=1)[:1]">

    <div class="portlet" id="portlet-releases">

        <h5 i18n:translate="box_latest_releases">Latest releases</h5>

        <div class="portletBody">

            <tal:block tal:repeat="obj results">

                <div tal:define="oddrow repeat/obj/odd"
                     tal:attributes="class python:test(oddrow, 'portletContent even', 'portletContent odd')">

                    <a href=""
                       tal:attributes="href obj/getProjectURL;
                                       title obj/Description">
                        <tal:block replace="structure here/product_icon.gif"/>
                        <span tal:replace="python:test(obj.Title, obj.Title, obj.getId)">
                            Product
                        </span>
                    </a>

                    <div class="discreet"
                         tal:content="python: ', '.join(obj.getCategoryTitles)">
                        Category
                    </div>

                    <div class="portletDetails"
                         tal:content="python:here.toPortalTime(obj.Date)">
                        July 7, 08:11
                    </div>
                </div>

            </tal:block>

            <div class="portletContent even" tal:condition="nocall:psc">

                <a href=""
                   class="portletMore"
                   tal:attributes="href python:psc[0].getURL()"
                   i18n:translate="box_more_projects">
                    More Projects&#8230;
                </a>

            </div>

        </div>

    </div>

</div>

</body>

</html>
