<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plonecollectorng">

<body>
<metal:block metal:fill-slot="head_slot">
  <link rel="Stylesheet" type="text/css" tal:attributes="href string:$portal_url/pcng_styles.css" />
</metal:block>
<div metal:fill-slot="main">	  

  <metal:block tal:define="action string: Mail to all staff members">
    <span metal:use-macro="here/pcng_macros/macros/collector_headline" />
  </metal:block>

  <form action="pcng_mailaction" method="post">
    <div class="row">
      <div class="label">Subject</div>
      <div class="field">
        <input type="text" name="subject" value="" size="80">
      </div>
    </div> <!-- End row -->

    <div class="row">
      <div class="label">Body</div>
      <div class="field">
        <textarea name="body" rows="20" cols="80"></textarea>
      </div>
    </div> <!-- End row -->

    <div class="row">
      <div class="label">&nbsp;</div>
      <div class="field">
        <input class="context" type="submit" value="Send" i18n:attributes="value" class="standalone"/>
        <input class="context" type="reset" value="Reset" i18n:attributes="value" class="standalone"/>
      </div>
    </div> <!-- End row -->

  </form>
</div>
</body>
</html>
