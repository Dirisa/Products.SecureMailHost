<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      i18n:domain="plonecollectorng"
      metal:use-macro="here/main_template/macros/master">
  <body>

    <metal:block metal:fill-slot="head_slot">
	  <link rel="Stylesheet" type="text/css" tal:attributes="href string:$portal_url/pcng_styles.css" />
      <tal:check tal:define="dummy context/pcng_check_access" />
    </metal:block>

    <div metal:fill-slot="main"
         tal:define="have_reportlab here/haveReportlab">

      <metal:block tal:define="action string: Open issues grouped by user">
        <span metal:use-macro="here/pcng_macros/macros/collector_headline" />
      </metal:block>

      <dl tal:repeat="user python: here.pcng_tool.getTrackerUsers(staff_only=1)" >
        <dt>
          <a tal:attributes="href string:pcng_view?view=advanced_search=1&status:list=pending&status:list=accepted&assigned_to=${user/username}">
            <span tal:content="string: ${user/fullname} (${user/username})" />
          </a>
        </dt>
        <dd>
          <ul>
            <li tal:repeat="row python: here.pcng_catalog(assigned_to={'query' : [user['username']]}, 
                                                          status={'query' : ('pending', 'accepted')},
                                                          sort_on='getId')">
              <div tal:define="issue row">
                <div metal:use-macro="here/issue_macros/macros/issue_shortview" />
               </div>
                
            </li>
          </ul>
        </dd>
      </dl>
    </div>
  </body>
</html>
