<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

<div metal:define-macro="portlet">

     <div class="portlet">

         <h5><a href="#"    
                tal:attributes="href here/absolute_url"
                tal:content="here/title_or_id" >title</a></h5>

         <div class="portletBody">

            <div class="stx"
                 tal:attributes="class python:test(here.text_format=='structured-text', 'portletContent stx', 'portletContent plain')">
                 <div tal:replace="structure python:here.CookedBody(stx_level=2)" />
            </div>

         </div>

     </div>
</div>

</body>

</html>

