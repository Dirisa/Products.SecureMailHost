<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

<div metal:define-macro="portlet">

     <div class="portlet">

         <h5><a href="#" tal:attributes="href string:${here/absolute_url}/view;
                                         title here/Description"
                         tal:content="here/title_or_id" >title</a></h5>

         <div class="portletBody">

            <div class="portletContent">
               <a href="#" tal:attributes="href string:${here/absolute_url}/view;
                                           title here/Description">
                   <img tal:attributes="src here/absolute_url"/></a>
            </div>

         </div>
     </div>
</div>

</body>

</html>

