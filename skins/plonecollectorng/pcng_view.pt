<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      i18n:domain="plonecollectorng"
      metal:use-macro="here/main_template/macros/master">
  <body>

    <metal:block metal:fill-slot="head_slot">
	  <link rel="Stylesheet" type="text/css" tal:attributes="href string:$portal_url/pcng_styles.css" />
    </metal:block>

    <div metal:fill-slot="main" 
         tal:define="search_form_position python: member.getProperty('pcng_position_searchform', 'bottom')">

      <!-- defaults for status: Pending+Accepted -->    
      <metal:block tal:condition="python: request.has_key('status') == 0">
        <span tal:define="dummy python: request.set('status', ['pending', 'accepted'])" />
      </metal:block>   

      <metal:block tal:condition="python: request.get('filter','') == 'assigned'">
        <span tal:define="dummy python: request.set('status', ['pending', 'accepted']);
                          dummy python: request.set('assigned_to', [member.getUserName()])" />
      </metal:block>   

      <metal:block tal:condition="python: request.get('filter','') == 'submitted'">
        <span tal:define="dummy python: request.set('status', ['pending', 'accepted']);
                          dummy python: request.set('Creator', [member.getUserName()])" />
      </metal:block>   

      <div metal:use-macro="here/pcng_navigation/macros/collector_navigation" />

      <metal:block tal:define="action string: Browse issues">
        <span metal:use-macro="here/pcng_macros/macros/collector_headline" />
      </metal:block>

      <metal:block tal:condition="python: search_form_position == 'top'">
        <fieldset><legend i18n:translate="legend_search_form">Search form</legend>
          <metal:block metal:use-macro="here/pcng_macros/macros/search_issues_form" />
        </fieldset>
        <div metal:use-macro="here/pcng_macros/macros/show_issues" />
      </metal:block>

      <metal:block tal:condition="python: search_form_position == 'bottom'">
        <div metal:use-macro="here/pcng_macros/macros/show_issues" />
        <fieldset><legend i18n:translate="legend_search_form">Search form</legend>
          <metal:block metal:use-macro="here/pcng_macros/macros/search_issues_form" />
        </fieldset>
      </metal:block>
    </div>
  </body>
</html>
