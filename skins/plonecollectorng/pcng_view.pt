<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master">
  <body>
    <div metal:fill-slot="main">

    <!-- defaults for status: Pending+Accepted -->    
    <metal:block tal:condition="python: request.has_key('status') == 0">
      <span tal:define="dummy python: request.set('status', ['Pending', 'Accepted'])" />
    </metal:block>   

	<h1 tal:content="here/title_or_id" />
      <div class="group"><span class="legend">Issue overview</span>
        <div metal:use-macro="here/pcng_macros/macros/show_issues" />
      </div>
      <div class="group"><span class="legend">Search form</span>
        <div metal:use-macro="here/pcng_macros/macros/search_issues_form" />
      </div>
    </div>
  </body>
</html>
