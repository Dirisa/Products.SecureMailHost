<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plonecollectorng">

<body>

  <metal:block metal:fill-slot="head_slot">
    <link rel="Stylesheet" type="text/css" tal:attributes="href string:$portal_url/pcng_styles.css" />
  </metal:block>

  <div metal:fill-slot="main">	  

    <metal:block tal:define="action string: References and uploads">
      <span metal:use-macro="here/pcng_macros/macros/collector_headline" />
    </metal:block>

    <table width="100%">
      <tr>
        <td valign="top">
          <div metal:use-macro="here/issue_macros/macros/issue_uploads" />
        </td>
      </tr>
      <tr>
        <td valign="top">
          <div metal:use-macro="here/issue_macros/macros/add_uploads" />
        </td>
      </tr>
      <tr tal:condition="here/haveATReferences">
        <td valign="top">
          <div metal:use-macro="here/issue_macros/macros/issue_references" />
        </td>
      </tr>
      <tr tal:condition="here/haveATReferences">
        <td valign="top">
          <div metal:use-macro="here/issue_macros/macros/add_references" />
        </td>
      </tr>
    </table>
  </div>
</body>
</html>
